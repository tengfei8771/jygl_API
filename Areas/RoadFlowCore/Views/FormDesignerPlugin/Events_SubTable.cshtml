<table cellpadding="0" cellspacing="1" border="0" width="100%" class="formtable">
    <tr>
        <th style="width:60px;">事件：</th>
        <td>
            <select class="myselect" id='event_name_@(Model)_@ViewData["eid"]' onchange="loadEvent(this.value, '@ViewData["eid"]','@(Model)');"></select>
        </td>
    </tr>
    <tr>
        <th>脚本：</th>
        <td>
            <div style="font-family:Verdana; margin-bottom:5px;">function methodName(srcElement){</div>
            <textarea class="mytextarea" onblur="setEvent(this.value, '@ViewData["eid"]', '@(Model)');" style="font-family:Verdana;width:99%;height:240px;" id='event_script_@(Model)_@ViewData["eid"]'></textarea>
            <div style="font-family:Verdana;">}</div>
        </td>
    </tr>
</table>